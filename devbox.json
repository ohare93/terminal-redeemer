{
  "$schema": "https://raw.githubusercontent.com/jetpack-io/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": [
    "go@1.24",
    "gopls@latest",
    "golangci-lint@latest",
    "jq@latest"
  ],
  "shell": {
    "init_hook": [
      "echo '[devbox] terminal-redeemer environment active'"
    ],
    "scripts": {
      "build": [
        "mkdir -p ./bin",
        "go build -o ./bin/redeem ./cmd/redeem"
      ],
      "test": [
        "go test ./..."
      ],
      "lint": [
        "golangci-lint run ./..."
      ],
      "install-local": [
        "mkdir -p \"$HOME/.local/bin\"",
        "go build -o \"$HOME/.local/bin/redeem\" ./cmd/redeem"
      ],
      "run": [
        "go run ./cmd/redeem --help"
      ]
    }
  }
}
